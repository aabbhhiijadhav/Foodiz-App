<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:gravity="center"
    android:background="#A8F6E6CA"
    tools:context=".login_page">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splashlogo"
        android:layout_marginTop="40dp"
        android:id="@+id/loginlogo"/>

    <TextView
        android:id="@+id/logintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/usernameinput"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/background_shape"
            android:ems="15"
            android:fontFamily="@font/amaranth"
            android:hint="Username"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/passwordinput"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/background_shape"
            android:ems="15"
            android:fontFamily="@font/amaranth"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/checkpasswordhidenot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FAB972"
            android:fontFamily="@font/amaranth"
            android:text="Show Password"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/amaranth"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/newaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#102DE8"
            android:fontFamily="@font/amaranth"
            android:text="       New Account      "
            android:textSize="24dp"
            android:textStyle="italic" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sigininwithgoole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_text_dark_normal"
            android:text="SignIn with Google"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth"/>


    </LinearLayout>

</LinearLayout>