<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Restaurant Image -->
        <ImageView
            android:id="@+id/lv_iv_categorywiseimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <!-- Restaurant Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Restaurant Name -->
            <TextView
                android:id="@+id/lv_iv_categorywiserestorant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <!-- Cuisine and Price Range -->
            <TextView
                android:id="@+id/lv_iv_categorywisedishprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuisine â€¢ Price"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="4dp"/>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@android:color/white"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="(250 reviews)"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <!-- Discount or Offers -->
            <TextView
                android:id="@+id/discount_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% OFF"
                android:background="@android:color/holo_green_light"
                android:textColor="@android:color/white"
                android:padding="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>




</LinearLayout>